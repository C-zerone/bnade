extends layout
block title
	title BNADE魔兽世界物价查询 24小时内价格波动 历史价格 全服务器价格查询比较
block content
	div#itemAucsModal.modal.fade.bs-example-modal-lg
		div.modal-dialog.modal-lg
			div.modal-content
				div.modal-header
					h4.modal-title 所有拍卖
				div.modal-body
					div.modal-body-content
				div.modal-footer
					button.btn.btn-default(type="button", data-dismiss="modal") 关闭
	div.container-fluid
		div.row
			div.col-sm-3.col-md-2.sidebar
				ul#realmQueryList.nav.nav-sidebar
				ul#itemQueryList.nav.nav-sidebar
			div.col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
				div.col-md-10
					form.navbar-form(onsubmit="return false;")
						div.form-inline
							div.form-group
								div.input-group
									input#realm.form-control(type="text",placeholder="服务器(选填)")
									div.input-group-btn
										button.btn.btn-default.dropdown-toggle(type="button",data-toggle="dropdown",aria-haspopup="true",aria-expanded="false") 选择 <span class="caret"></span>
										ul#realmSelectList.dropdown-menu.dropdown-menu-right
							div.form-group
								div.input-group
									input#itemName.form-control(type="text",placeholder="物品名或ID")
									div.input-group-btn
										button.btn.btn-default.dropdown-toggle(type="button",data-toggle="dropdown",aria-haspopup="true",aria-expanded="false") 选择 <span class="caret"></span>
										ul#itemSelectList.dropdown-menu.dropdown-menu-right
							input#queryBtn.btn.btn-success(type="button",value="查询") 
							input#itemFuzzyQueryBtn.btn.btn-success(type="button",value="模糊查询") 
							input.btn.btn-success(type="reset",value="重置")
					p#msg
					div#itemCreatedByDiv
						input#itemCreatedByBtn.btn.btn-danger(type="button",value="显示成本(New)")
						div#itemCreatedByDetailDiv
					div#itemListByName
					div#itemDetail
					p#queryByUrl
					p#past24Msg
					div#past24CtlDiv
						h2.sub-header 总结
						table.table.table-striped
							thead
								tr
									th 说明
									th 最低价格
									th 最高价格
									th 平均价格
									th 平均数量
									th 最近一次价格
							tbody
								tr
									td 24小时内
									td#past24MinBuyout
									td#past24MaxBuyout
									td#past24AvgBuyout
									td#past24AvgQuantity
									td#past24LatestBuyout
								tr
									td 一周内
									td#pastWeekMinBuyout
									td#pastWeekMaxBuyout
									td#pastWeekAvgBuyout
									td#pastWeekAvgQuantity
									td
								tr
									td 历史信息
									td#historyMin
									td#historyMax
									td#historyAvg
									td#historyAvgQuantity
									td
								tr
									td 所有服务器
									td#allMinBuyout
									td#allMaxBuyout
									td#allAvgBuyout
									td#allAvgQuantity
									td
						div#past24Container
					p#pastWeekMsg
					div#pastWeekCtlDiv
						div#pastWeekContainer(style="min-width: 310px; height: 400px; margin: 0 auto")
						div#pastWeekBuyoutHeatMapContainer(style="min-width: 310px; max-width: 800px; height: 400px; margin: 0 auto")
						div#pastWeekQuantityHeatMapContainer(style="min-width: 310px; max-width: 800px; height: 400px; margin: 0 auto")
					p#allRealmMsg
					div#allRealmCtlDiv
						div#allRealmContainer(style="min-width: 310px; height: 400px; margin: 0 auto")
						div
							a#showAllA.btn.btn-primary(href='javascript:void(0)') 显示全部+
							table#showAllTbl.table.table-striped
								thead
									tr
										th #
										th 服务器
										th <div id='sort1' class='tblHeadBtn'>最低一口价<span class='glyphicon' aria-hidden='true'></span></div>
										th 卖家
										th 剩余时间
										th <div id='sort2' class='tblHeadBtn'>总数量<span class='glyphicon' aria-hidden='true'></span></div>
										th 服务器人气
										th 更新时间
								tbody#showAllBody
					p 说明:
					ul
						li BNADE交流QQ群:518160038
						li 如果您需要对网站内容进行引用，请务必在引用页面添加被引用页面的链接
						li 装笼宠物价格查询请点击<a href="petQuery.html">宠物价格</a>页面
						li 最高和平均价格取得是前80%数据计算
						li 有任何问题请在NGA帖子下留言:
							a(href="http://bbs.nga.cn/read.php?tid=8883933") http://bbs.nga.cn/read.php?tid=8883933
				div.col-md-2
						ul#fuzzyItemsList.nav.nav-sidebar
						h4 搜索排行榜
						ul.nav.nav-tabs(role="tablist")
							li.active(role="presentation")
								a(href="#dailyHot",aria-controls="dailyHot",role="tab",data-toggle="tab",style="padding-left: 8px;padding-right: 8px;") 每日
							li(role="presentation")
								a.hotSearchA(href="#weeklyHot",aria-controls="weeklyHot",role="tab",data-toggle="tab",style="padding-left: 8px;padding-right: 8px;") 每周
							li(role="presentation")
								a.hotSearchA(href="#monthlyHot",aria-controls="monthlyHot",role="tab",data-toggle="tab",style="padding-left: 8px;padding-right: 8px;") 每月
						div.tab-content
							div#dailyHot.tab-pane.active
							div#weeklyHot.tab-pane
							div#monthlyHot.tab-pane
						div(data-spy="affix")
							a(href="#top",data-spy="scroll",data-target="body") 返回顶部
block pagescript
	script(src="http://cdn.bootcss.com/highstock/4.2.3/highstock.js")
	script(src="http://cdn.bootcss.com/highstock/4.2.3/modules/heatmap.js")
	script(src="js/jquery-ui.min.js")
	script(src="js/itemQuery.js?rev=@@hash")